{% macro list(posts, count) %}
<ol class="posts-list">
  {% for post in posts %}
  <li class="post-item{{ " post-item_favorite" if post.data.is_favorite }}">
    <span class="post-date">{{ post.data.date | date }}</span>
    <a class="post-item__title" href="{{ post.url | url }}">{{ post.data.title }}</a>
    <ul class="tags-list">
      {% for tag in post.data.tags %}
        {% if tag !== 'note' and tag !== 'archive' %}
          <li>
            <a class="tag-item" href="/tags/{{ tag }}/">
              {{ tag }}
              <span class="tag-item__count">{{ count[tag] }}</span>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </li>
  {% endfor %}
</ol>
{% endmacro %}
